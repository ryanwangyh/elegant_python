class Person():
	name = 'aaa'

p1=Person()
p2=Person()
p1.name = 'bbb'

print ('p1 name is %s' %  p1.name) ## bbb
print ('p2 name is %s' % p2.name) ## aaa
print ('Person name is %s' % Person.name) ## aaa


class Person():
	name = []

p1=Person()
p2=Person()
p1.name.append('111')

print ('p1 name is %s' %  p1.name) ## 111
print ('p2 name is %s' % p2.name) ## 111
print ('Person name is %s' % Person.name) ## 111
